<?xml version="1.0"?>
	<property name="make.cmd" value="/usr/bin/make"/>
	<target name="testDureeCompile"
	      description="cppunit test compile" >
	  <exec dir="${build.native}/Test" executable="${make.cmd}" failonerror="true">

	  <arg value="testDuree"/>
	  </exec>
	</target>

	<target name="testDuree" 
	      description="cppunit test run" >
	  <exec dir="${build.native}/Test" executable="./testDuree" failonerror="false">
	  </exec>

	</target>

